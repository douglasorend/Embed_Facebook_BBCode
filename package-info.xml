	<name>Embed Facebook BBCode</name>
	<type>modification</type>
	<version>3.8</version>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<database>db_install.php</database>
		<modification>install_20x.xml</modification>
		<modification>language_english.xml</modification>
		<modification>language_greek-utf8.xml</modification>
		<modification>language_norwegian.xml</modification>
		<modification>language_spanish.xml</modification>
		<modification>language_spanish_latin.xml</modification>
		<modification>language_turkish.xml</modification>
		<modification>language_turkish-utf8.xml</modification>
		<require-file name="Subs-BBCode-Facebook.php" destination="$sourcedir" />
		<require-file name="facebook.gif" destination="$imagesdir/bbc" />
	</install>
	<uninstall for="2.0 - 2.0.99">
		<code>add_remove_hooks.php</code>
		<modification reverse="true">install_20x.xml</modification>
		<modification reverse="true">language_english.xml</modification>
		<modification reverse="true">language_greek-utf8.xml</modification>
		<modification reverse="true">language_norwegian.xml</modification>
