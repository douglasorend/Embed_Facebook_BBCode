		<modification reverse="true">language_turkish.xml</modification>
		<modification reverse="true">language_turkish-utf8.xml</modification>
		<remove-file name="$sourcedir/Subs-BBCode-Facebook.php" />		
		<remove-file name="$imagesdir/bbc/facebook.gif" />
	</uninstall>

